<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b35c00"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">


    <ScrollView
        android:id="@+id/svPrincipal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPrimeiroBimestre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_customizado"
                android:text="1ยบ Bimestre"/>

            <Button
                android:id="@+id/btnSegundoBimestre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_customizado"
                android:text="2ยบ Bimestre"/>

            <Button
                android:id="@+id/btnTerceiroBimestre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_customizado"
                android:text="3ยบ Bimestre"/>

            <Button
                android:id="@+id/btnQuartoBimestre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_customizado"
                android:text="4ยบ Bimestre"/>

            <Button
                android:id="@+id/btnResultadoFinal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_customizado"
                android:text="Resultado Final"/>



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>