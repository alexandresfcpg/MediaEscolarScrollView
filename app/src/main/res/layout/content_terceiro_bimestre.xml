<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_terceiro_bimestre">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="20dp"
        android:text="Média Escolar" />

    <TextView
        android:id="@+id/txtBimestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="163dp"
        android:layout_marginTop="71dp"
        android:text="3º Bimestre" />

    <TextView
        android:id="@+id/txtMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="123dp"
        android:text="Matéria" />

    <TextView
        android:id="@+id/txtNotaProva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="124dp"
        android:text="Nota da Prova" />

    <TextView
        android:id="@+id/txtNotaTrabalho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@+id/txtNotaProva"
        android:text="Nota do Trabalho" />

    <EditText
        android:id="@+id/editMateria"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMateria"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Matéria"
        android:inputType="text" />

    <EditText
        android:id="@+id/editNotaProva"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNotaProva"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="149dp"
        android:layout_toEndOf="@+id/editMateria"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editNotaTrabalho"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-259dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="26dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/txtMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editMateria"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="31dp"
        android:text="Média" />

    <TextView
        android:id="@+id/txtSituacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editNotaProva"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="175dp"
        android:layout_marginTop="31dp"
        android:text="Situação" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/txtMedia"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="386dp"
        android:hint="Resultado" />

    <TextView
        android:id="@+id/txtSituacaoFinal"
        android:layout_width="102dp"
        android:layout_height="43dp"
        android:layout_below="@+id/txtSituacao"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="390dp"
        android:layout_toEndOf="@+id/txtResultado"
        android:hint="Situação Final" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_below="@+id/txtSituacao"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="123dp"
        android:layout_marginBottom="269dp"
        android:text="CALCULAR" />

</RelativeLayout>